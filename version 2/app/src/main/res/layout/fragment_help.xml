<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skin_page_bg_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="404"
        android:textColor="@color/skin_txt_color_sceond" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="107dp"
        android:gravity="center"
        android:text="@string/help_txt"
        android:textColor="@color/skin_txt_color_main"
        android:textSize="60sp" />

    <Button
        android:id="@+id/btn_change_skin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="Change Skin"
        android:textAllCaps="false"
        android:textColor="@color/skin_txt_color_main" />

</RelativeLayout>