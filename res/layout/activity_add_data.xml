<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="15dp" >

        <ImageButton
            android:id="@+id/btn_leftmenu"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/btn_back" />

        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/setting_pic" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#2000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="标题"
            android:textColor="#aa666666"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_add_title"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/add_text_content_shape"
            android:ems="10"
            android:gravity="center"
            android:hint="请输入标题"
            android:maxLength="10"
            android:minHeight="40dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#67997b"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="内容"
            android:textColor="#aa666666"
            android:textSize="16sp" />

        <ScrollView
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/add_text_content_shape"
            android:gravity="bottom"
            android:minHeight="250dp" >

            <EditText
                android:id="@+id/et_add_content"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:ems="10"
                android:gravity="top"
                android:hint="请输入正文内容"
                android:minHeight="250dp"
                android:text=""
                android:textColor="#686868"
                android:textSize="18sp" />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_setTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:focusable="true"
                android:textSize="18sp"
                android:focusableInTouchMode="true"
                android:text="设置标签：[学习]"
                android:textColor="#686868" />
            
            <CheckBox 
                android:id="@+id/cb_add_isTwenty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="20H学习计划"
                 android:textSize="18sp"
                android:textColor="#686868"
                
                />
            
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_vertical" >

        <ImageButton
            android:id="@+id/ib_add_cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:alpha="70"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/dialog_btn_cancel"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/ib_add_ok"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/dialog_btn_ok"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>