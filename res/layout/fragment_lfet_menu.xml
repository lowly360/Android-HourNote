<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/left_menu_bg"
    android:gravity="top" >

    <ImageView
        android:id="@+id/iv_leftmenu_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/left_menu_image"
        android:background="@drawable/left_menu_icon" />
    
    <TextView 
        android:id="@+id/tv_login_logout"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注销"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_below="@id/iv_leftmenu_icon"
        android:layout_centerHorizontal="true"
        />
    
    <TextView 
        android:id="@+id/tv_leftmenu_home"
        android:layout_marginTop="30dp"
        android:text="主页面"
        android:layout_below="@id/tv_login_logout"
        style="@style/LeftMenuItemStyle"
        />
    
    <TextView 
        android:id="@+id/tv_leftmenu_help"
        android:layout_marginTop="10dp"
        android:text="帮助"
        android:layout_below="@id/tv_leftmenu_home"
        style="@style/LeftMenuItemStyle"
        />
    
    <TextView 
        android:id="@+id/tv_leftmenu_setting"
        android:layout_marginTop="10dp"
        android:text="设置"
        android:layout_below="@id/tv_leftmenu_help"
        style="@style/LeftMenuItemStyle"
        />
    
    <TextView 
        android:id="@+id/tv_leftmenu_about"
        android:layout_marginTop="10dp"
        android:text="关于"
        android:layout_below="@id/tv_leftmenu_setting"
        style="@style/LeftMenuItemStyle"
        />
    
    <TextView 
        android:id="@+id/tv_leftmenu_exit"
        android:layout_marginTop="10dp"
        android:text="退出"
        android:layout_below="@id/tv_leftmenu_about"
        style="@style/LeftMenuItemStyle"
        />

</RelativeLayout>