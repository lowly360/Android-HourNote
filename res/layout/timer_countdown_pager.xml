<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_circle_out"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/timer_circle_out" />

    <ImageView
        android:id="@+id/iv_circle_in"
        android:layout_width="258dp"
        android:layout_height="258dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/timer_circle_in" />

    <ImageView
        android:id="@+id/iv_red_dot"
        android:layout_width="245dp"
        android:layout_height="245dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/red_dot" />

    <TextView
        android:id="@+id/tv_cen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_hour"
        android:layout_below="@+id/tv_hour"
        android:text="58"
        android:textSize="55sp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/tv_sce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_cen"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/tv_cen"
        android:text="32"
        android:textSize="38sp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/tv_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_red_dot"
        android:layout_alignTop="@+id/iv_red_dot"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="20dp"
        android:text="19"
        android:textSize="85sp"
        android:textStyle="italic|bold" />

</RelativeLayout>