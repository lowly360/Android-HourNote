<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="10dp" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/tv_edit_pagerTitle"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/timer_back" />

        <TextView
            android:id="@+id/tv_edit_pagerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改"
            android:textColor="#61667e"
            android:textSize="28sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_margin="1dp"
        android:background="#2000" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="标题"
        android:textColor="#aa666666"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/tv_edit_title"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/add_text_content_shape"
        android:ems="10"
        android:gravity="center"
        android:maxLength="10"
        android:minHeight="40dp"
        android:singleLine="true"
        android:text="hehehe"
        android:textColor="@color/title_yes"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="内容"
        android:textColor="#aa666666"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="310dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/add_text_content_shape"
        android:gravity="bottom" >

        <EditText
            android:id="@+id/tv_edit_content"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:background="@null"
            android:ems="10"
            android:gravity="top"
            android:minHeight="160dp"
            android:text="测试字体测试字体测试字体测试字体测试字体测试字体测试字体测试字体测试字体测试字体测试字体测试字体测试字体"
            android:textColor="#686868"
            android:textSize="18sp" />
    </ScrollView>

    <TextView
        android:id="@+id/tv_edit_time"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="剩余时间：无"
        android:textColor="#686868"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_edit_date"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:text="修改时间：2015.10.7 22：23"
        android:textColor="#686868"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="标签："
            android:textColor="#686868"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_edit_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="学习"
            android:textColor="#686868"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cb_edit_istwenty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="20H计时任务"
            android:textColor="#686868"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_edit_editok"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_detail_editbtn"
        android:drawablePadding="5dp"
        android:text="完成修改"
        android:textColor="#67997b"
        android:textSize="25sp" />

</LinearLayout>