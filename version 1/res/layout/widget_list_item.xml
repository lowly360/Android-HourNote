<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_widget_list_layout"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
   >

    <TextView
        android:id="@+id/tv_widget_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:ems="5"
        android:singleLine="true"
        android:text="六级dfdfdfdfdfdfd"
        android:textColor="@color/title_yes"
        android:textSize="18sp" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/tv_widget_list_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:text="六级dfadsfffdddddddddddddddddddd"
        android:drawableRight="@drawable/arrow"
        android:drawablePadding="4dp"
        android:textSize="16sp" />

    

</LinearLayout>